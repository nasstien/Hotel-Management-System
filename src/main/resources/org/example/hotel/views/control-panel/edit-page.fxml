<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>

<VBox fx:id="vBox" alignment="CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="10" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.controllers.EditPageController">
    <Label fx:id="headingLabel" styleClass="heading" />
    <ComboBox fx:id="idField" focusTraversable="false" maxWidth="-Infinity" minWidth="-Infinity" />
    <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveClick" text="Save" />
    <Button mnemonicParsing="false" onAction="#handleBackClick" text="Back" />
</VBox>
