<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>

<VBox fx:id="root" alignment="CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="10.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.controllers.LogInController">
    <Label styleClass="heading" text="Log In" textAlignment="CENTER" />
    <ComboBox fx:id="hotelIdField" focusTraversable="false" maxWidth="-Infinity" prefHeight="26.0" prefWidth="230.0" promptText="Hotel ID" />
    <TextField fx:id="emailField" focusTraversable="false" layoutX="124.0" layoutY="141.0" maxWidth="-Infinity" prefHeight="26.0" prefWidth="230.0" promptText="Email" />
    <PasswordField fx:id="passwordField" focusTraversable="false" maxWidth="-Infinity" prefWidth="230.0" promptText="Password" />
    <Button focusTraversable="false" onAction="#handleLogInClick" text="Log In" />
    <Hyperlink styleClass="small-text" focusTraversable="false" onAction="#handleSignUpClick" text="I don't have an account" textAlignment="CENTER" underline="true" />
</VBox>
