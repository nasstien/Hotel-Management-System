<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>

<VBox fx:id="root" alignment="CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="10.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.controllers.SignUpController">
   <Label styleClass="heading" text="Sign Up" />
   <ComboBox fx:id="hotelIdField" focusTraversable="false" maxWidth="-Infinity" promptText="Hotel ID" />
   <TextField fx:id="firstNameField" focusTraversable="false" layoutX="410.0" layoutY="336.0" maxWidth="-Infinity" promptText="First Name" />
   <TextField fx:id="lastNameField" focusTraversable="false" layoutX="410.0" layoutY="354.0" maxWidth="-Infinity" promptText="Last Name" />
   <TextField fx:id="emailField" focusTraversable="false" maxWidth="-Infinity" promptText="Email" />
   <TextField fx:id="phoneNumField" focusTraversable="false" layoutX="410.0" layoutY="390.0" maxWidth="-Infinity" promptText="Phone Number" />
   <TextField fx:id="passportNumField" focusTraversable="false" layoutX="410.0" layoutY="408.0" maxWidth="-Infinity" promptText="Passport Number" />
   <TextField fx:id="positionField" focusTraversable="false" layoutX="410.0" layoutY="426.0" maxWidth="-Infinity" promptText="Position" />
   <PasswordField fx:id="passwordField" focusTraversable="false" maxWidth="-Infinity" promptText="Password" />
   <PasswordField fx:id="passwordConfirmField" focusTraversable="false" maxWidth="-Infinity" promptText="Confirm Your Password" />
   <Button focusTraversable="false" onAction="#handleSignUpClick" text="Sign Up" />
   <Hyperlink styleClass="small-text" focusTraversable="false" onAction="#handleLogInClick" text="Back to login page" textAlignment="CENTER" underline="true"/>
</VBox>
