<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox fx:id="vBoxAdmin" stylesheets="@../../styles.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.hotel.controllers.ToolBoxController">
    <Button mnemonicParsing="false" prefHeight="44.0" prefWidth="190.0" styleClass="menu-button" onAction="#handleAnalyticsClick">
        <graphic>
            <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="103.0" spacing="10">
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../icons/menu/analytics.png" />
                </ImageView>
                <Label text="Analytics" />
            </HBox>
        </graphic>
    </Button>
    <Button mnemonicParsing="false" prefHeight="44.0" prefWidth="190.0" styleClass="menu-button" onAction="#handleUsersClick">
        <graphic>
            <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="103.0" spacing="10">
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../icons/menu/users.png" />
                </ImageView>
                <Label text="Users" />
            </HBox>
        </graphic>
    </Button>
    <fx:include source="employee.fxml" />
</VBox>
